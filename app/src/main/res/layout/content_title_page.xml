<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#33B5E5">

    <RelativeLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:id="@+id/secondView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:src="@drawable/titleanimation1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="71dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/singleplayer"
            android:src="@drawable/singleplayer1"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/versus"
            android:src="@drawable/versus1"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:layout_marginTop="68dp"
            android:layout_below="@+id/singleplayer"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboard"
            android:src="@drawable/leaderboard1"
            android:background="#ffffff"
            android:layout_marginTop="66dp"
            android:layout_below="@+id/versus"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_below="@+id/versus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/roomLayout">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rm1"
                android:src="@drawable/room1"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/rm2"
                android:layout_toStartOf="@+id/rm2"
                android:background="#FFFFFF"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rm2"
                android:src="@drawable/room2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#FFFFFF"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rm3"
                android:src="@drawable/room3"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rm2"
                android:layout_toEndOf="@+id/rm2"
                android:background="#FFFFFF"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/rm1Occupancy"
                android:layout_below="@+id/rm1"
                android:layout_alignLeft="@+id/rm1"
                android:layout_alignStart="@+id/rm1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/rm2Occupancy"
                android:layout_below="@+id/rm1"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/rm3Occupancy"
                android:layout_below="@+id/rm1"
                android:layout_alignRight="@+id/rm3"
                android:layout_alignEnd="@+id/rm3" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>